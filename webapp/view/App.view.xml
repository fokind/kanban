<mvc:View controllerName="fokind.kanban.controller.App" xmlns:mvc="sap.ui.core.mvc" xmlns:grid="sap.ui.layout.cssgrid" xmlns="sap.m">
	<App>
		<Page title="Kanban">
			<grid:CSSGrid gridTemplateColumns="repeat({=${/}.length}, 1fr)"
				items="{/}">
				<List items="{tasks}">
					<headerToolbar>
						<Toolbar>
							<Title text="{status}"/>
						</Toolbar>
					</headerToolbar>
					<StandardListItem title="{summary}"/>
				</List>
			</grid:CSSGrid>
		</Page>
	</App>
</mvc:View>